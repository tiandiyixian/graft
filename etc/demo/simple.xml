<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE configuration>

<configuration>

    <general>
        <log-level>debug</log-level>
        <dot-file>etc/dot/simple.dot</dot-file>
        <graph-file>etc/dumps/simple.json</graph-file>
    </general>

    <soot>
        <options>
            <process-dir>etc/demo/simple</process-dir>
            <soot-classpath>etc/demo/simple</soot-classpath>
        </options>
    </soot>

    <db>
        <implementation>neo4j</implementation>
        <directory>.db</directory>
    </db>

    <phases>
        <phase>BuildCpgPhase</phase>
        <phase>DumpCpgPhase</phase>
        <!--<phase>DotPhase</phase>-->
        <!--<phase>TaintAnalysisPhase</phase>-->
    </phases>

    <taint-analysis>

        <source>
            <method>.*source.*</method>
            <taints-ret>true</taints-ret>
        </source>

        <sanitizer>
            <method>.*sanitize.*</method>
            <args>0</args>
        </sanitizer>

        <sink>
            <method>.*sink.*</method>
            <args>0</args>
        </sink>

    </taint-analysis>

</configuration>